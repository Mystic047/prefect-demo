# =============================================================================
# PREFECT SERVER DATABASE (PostgreSQL on AWS)
# =============================================================================
# This is where Prefect stores flow runs, deployments, logs, etc.
PREFECT_API_DATABASE_CONNECTION_URL=postgresql+asyncpg://username:password@your-aws-postgres-host:5432/prefect_db

# =============================================================================
# SQL SERVER DATABASE (Microsoft SQL Server)
# =============================================================================
# This is your data source database
SQLSERVER_HOST=your-sqlserver-host.database.windows.net
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=your_database_name
SQLSERVER_USER=your_username
SQLSERVER_PASSWORD=your_password

# =============================================================================
# PREFECT API URL
# =============================================================================
# Internal container-to-container communication
PREFECT_API_URL=http://prefect-server:4200/api
